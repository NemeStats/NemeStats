@model BusinessLogic.Models.Player
   
@{
    Layout = null;
}

<div class="createOrUpdatePartial">
        @using (Html.BeginForm())
        {
            @Html.Hidden("GamingGroupId", @Model.GamingGroupId)
            <div class = "form-inline">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    Create New Player
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Name, new {@class = "form-control", placeholder = "New Player name" })
                    </div>
                    <div class="col-md-offset-3">
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group activeGroup">
                    @Html.LabelFor(model => model.Active, new { @class = "control-label col-md-2 panel-text-vertical-center" })
                    @Html.CheckBoxFor(model => model.Active, new { @class = "form-control col-md-1" })
                </div>
                <div class="form-group">
                    <div class="col-md-pull-2">
                        <button id="btnSubmitCreatePlayer" type="button" class="btn btn-primary"><span class="fa fa-plus-circle"></span> Create Player</button>
                    </div>
                </div>
            </div>
        }
</div>