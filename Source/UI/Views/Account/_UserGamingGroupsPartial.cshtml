@using UI.Controllers
@model UI.Models.User.UserGamingGroupsModel

<li class="dropdown">
    @{
        string gamingGroupName = "Create Gaming Group";
    }
    @if (Model.CurrentGamingGroup != null)
    {
        gamingGroupName = Model.CurrentGamingGroup.Name;
    }
    <a href="#" class="dropdown-toggle ga-topgaminggroupswitcher-drowpdown" data-toggle="dropdown" role="button" aria-expanded="false">@gamingGroupName<span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        @foreach (var gamingGroup in Model.GamingGroups)
        {
            <li><a class="ga-topgaminggroupswitcher-switchlink" href="@Url.Action(MVC.GamingGroup.SwitchGamingGroups().AddRouteValue("gamingGroupId", gamingGroup.Id))">@gamingGroup.Name</a></li>
        }
        <li role="separator" class="divider"></li>
        <li><a class="ga-topgaminggroupswitcher-viewall" href="@Url.Action(MVC.Account.Manage())#@AccountController.GAMING_GROUPS_TAB_HASH_SUFFIX">Manage My Groups</a></li>
        <li role="separator" class="divider"></li>
        <li><a class="ga-topgaminggroupswitcher-createnew" href="@Url.Action(MVC.Account.Manage())#@AccountController.GAMING_GROUPS_TAB_HASH_SUFFIX">Create new Gaming Group</a></li>
    </ul>
</li>

