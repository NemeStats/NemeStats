@model UI.Models.GamingGroup.CreateGamingGroupViewModel
@using (Html.BeginForm(MVC.GamingGroup.ActionNames.CreateNewGamingGroup, MVC.GamingGroup.Name, FormMethod.Post, new { id = "createGamingGroupForm", @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    <div class="form-group form-inline well">
        <div class="col-md-9">
            Create a New Gaming Group
            @Html.TextBoxFor(model => model.GamingGroupName, new { placeholder = "New Gaming Group name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GamingGroupName)
            <button id="btnSubmitCreateGamingGroup" type="submit" class="btn btn-primary" form="createGamingGroupForm"><span class="fa fa-plus-circle"></span> Create Gaming Group</button>
        </div>
    </div>
}